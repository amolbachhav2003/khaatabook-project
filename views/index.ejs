<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900 p-7 text-white">

        <!-- Nav bar -->
        <div class="nav flex justify-between text-lg">
            <h1 class="font-bold">Khaatabook</h1>
            <div class="sub-nav flex item-end">
                <a class="pr-16" href="/">Home</a>
                <a href="/create">Create New Hisaab</a>
            </div>
        </div>
        <!-- Nav bar -->

        <div class="All-Hisaab">
            <h1 class="mt-28">All Hisaab Kitaab</h1>

            <% files.forEach(function(files){ %>

                <div class="w-2/6 h-11 bg-zinc-800 border-[1px] border-zinc-500 rounded-md mt-6">
                
                    <div class="flex p-2">
                        <h1 class="pr-4 text-zinc-200"><%= files %></h1>
                        <a class="text-blue-400 pr-40" href="/read/<%= files %>">Read-Hissab</a>
                    
                        <a class="pr-3 text-green-500" href="/edit/<%= files %>">Edit</a>
                        <a class="text-red-500" href="/check/<%= files %>">Delete</a>
                    </div>
                   
                </div>

            <% }) %>

        </div>

    </div>
</body>
</html>